{
  "name": "react-native-epub-creator",
  "version": "1.0.1",
  "description": "This react-native library create epub file for android and IOS",
  "main": "index.tsx",
  "keywords": [
    "react-native",
    "epub",
    "epub-creator",
    "react-native-epub-creator"
  ],
  "repository": "https://github.com/AlenToma/react-native-epub-creator",
  "author": "Alen Toma <alen.toma@gmail.com> (https://github.com/AlenToma)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlenToma/react-native-epub-creator/issues"
  },
  "homepage": "https://github.com/AlenToma/react-native-epub-creator#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "dependencies": {
    "epub-constructor": "^1.0.2",
    "react-native-zip-archive": "^6.0.3",
    "uuid": "^3.4.0"
  }
}
